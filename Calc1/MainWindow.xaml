<Window x:Class="Calc1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calc1"
        mc:Ignorable="d"
        Title="Calculator" Height="800" Width="700">

    <Window.Resources>
        <!-- Region : Styles -->
        <Style x:Key="NumberButtonsStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="MyBorder" 
                                Margin="0.7"
                                Background="Lavender"
                                BorderBrush="Black"
                                BorderThickness="2"
                                CornerRadius="8">
                            <StackPanel>
                                <TextBlock
                                       Text="{TemplateBinding Content}"
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" 
                                       FontSize="70"
                                       Foreground="Black"/>
                                <Label Margin="25,0,25,0"
                                       Content="{TemplateBinding Tag}"
                                       Background="Black"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Padding="10,0"
                                       FontSize="16"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="MyBorder" Value="LightBlue"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" TargetName="MyBorder" Value="LightGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- End Styles -->
        
        <!-- FunctionStyle-->
        <Style x:Key="FunctionButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="MyBorder" 
                                Background="Lavender"
                                BorderBrush="Black"
                                BorderThickness="2"
                                CornerRadius="8">
                            <TextBlock
                                    Text="{TemplateBinding Content}"
                                    TextAlignment="Center"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="55"
                                    Foreground="Black"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="MyBorder" Value="LightBlue"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" TargetName="MyBorder" Value="LightGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- End FunctionStyle-->
        
        <!-- DotStyle -->
        <Style x:Key="DotStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="MyBorder" 
                                Background="Lavender"
                                BorderBrush="Black"
                                BorderThickness="2"
                                CornerRadius="8">
                            <Ellipse
                                 Width="20"
                                 Height="20"
                                 Fill="Black"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="MyBorder" Value="LightBlue"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" TargetName="MyBorder" Value="LightGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- End DotStyle -->
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
            <Border 
                Grid.Column="0"
                Grid.Row="0"
                Grid.ColumnSpan="4"
                BorderBrush="Black"
                BorderThickness="4"
                CornerRadius="10"
                Margin="9"
                Background="Lavender">
            <TextBlock 
                x:Name="DISPLAY" 
                Text=""
                FontSize="70"
                TextAlignment="Right"
                VerticalAlignment="Center"
                HorizontalAlignment="Stretch"/>
        </Border>
        <StackPanel 
                    Grid.Column="0"
                    Grid.Row="0"
                    Grid.ColumnSpan="4"
                    Margin="20,20,30,0"/>
        <TextBlock 
                    x:Name="RESULT" 
                    Text=""
                    FontSize="30"/>
        <ListBox 
                    x:Name="HISTORYList"
                    Grid.Row="0"
                    Grid.RowSpan="7"
                    Grid.Column="4"
                    Grid.ColumnSpan="2"
                    Margin="10"
                    Background="Lavender"
                    Foreground="Black"
                    FontSize="24"
                    Height="200"
                    Width="400"/>

        <!-- Numbers -->
        <Button x:Name="ZERO" 
                Content="0"
                Grid.Column="1"
                Grid.Row="5"
                FontSize="10"
                Click="Number_Pressed"
                Style="{StaticResource NumberButtonsStyle}"/>
        <Button x:Name="ONE"
                Content="1"
                Grid.Column="0"
                Grid.Row="4"
                FontSize="90"
                Click="Number_Pressed"
                Style="{StaticResource NumberButtonsStyle}"/>
        <Button x:Name="TWO"
                Content="2"
                Grid.Column="1"
                Grid.Row="4"
                FontSize="90"
                Click="Number_Pressed"
                Style="{StaticResource NumberButtonsStyle}"/>
        <Button x:Name="THREE"
                Content="3"
                Grid.Column="2"
                Grid.Row="4"
                FontSize="90"
                Click="Number_Pressed"
                Style="{StaticResource NumberButtonsStyle}"/>
        <Button x:Name="FOUR"
                Content="4"
                Grid.Column="0"
                Grid.Row="3"
                FontSize="90"
                Click="Number_Pressed"
                Style="{StaticResource NumberButtonsStyle}"/>
        <Button x:Name="FIVE"
                Content="5"
                Grid.Column="1"
                Grid.Row="3"
                FontSize="90"
                Click="Number_Pressed"
                Style="{StaticResource NumberButtonsStyle}"/>
        <Button x:Name="SIX"
                Content="6"
                Grid.Column="2"
                Grid.Row="3"
                FontSize="90"
                Click="Number_Pressed"
                Style="{StaticResource NumberButtonsStyle}"/>
        <Button x:Name="SEVEN"
                Content="7"
                Grid.Column="0"
                Grid.Row="2"
                FontSize="90"
                Click="Number_Pressed"
                Style="{StaticResource NumberButtonsStyle}"/>
        <Button x:Name="EIGHT"
                Content="8"
                Grid.Column="1"
                Grid.Row="2"
                FontSize="90"
                Click="Number_Pressed"
                Style="{StaticResource NumberButtonsStyle}"/>
        <Button x:Name="NINE"
                Content="9"
                Grid.Column="2"
                Grid.Row="2"
                FontSize="90"
                Click="Number_Pressed"
                Style="{StaticResource NumberButtonsStyle}"/>
        <!-- End Numbers-->
        
        <!-- Region : FunctionKeys-->
        <Button x:Name="ADD"
                Content="+"
                Grid.Column="3"
                Grid.Row="5"
                FontSize="90"
                Click="FunctionKey_Pressed"
                Style="{StaticResource FunctionButtonStyle}"/>
        <Button x:Name="SUB"
                Content="-"
                Grid.Column="3"
                Grid.Row="4"
                FontSize="90"
                Click="FunctionKey_Pressed"
                Style="{StaticResource FunctionButtonStyle}"/>
        <Button x:Name="MULT"
                Content="x"
                Grid.Column="3"
                Grid.Row="3"
                FontSize="90"
                Click="FunctionKey_Pressed"
                Style="{StaticResource FunctionButtonStyle}"/>
        <Button x:Name="DIV"
                Content="/"
                Grid.Column="3"
                Grid.Row="2"
                FontSize="90"
                Click="FunctionKey_Pressed"
                Style="{StaticResource FunctionButtonStyle}"/>
        <Button x:Name="EQUALS"
                Content="="
                Grid.Column="2"
                Grid.Row="5"
                FontSize="90"
                Click="FunctionKey_Pressed"
                Style="{StaticResource FunctionButtonStyle}"/>
        <Button x:Name="MOD"
                Content="%"
                Grid.Column="1"
                Grid.Row="1"
                FontSize="60"
                Click="FunctionKey_Pressed"
                Style="{StaticResource FunctionButtonStyle}"/>
        <Button x:Name="SQRT"
                Content="√"
                Grid.Column="2"
                Grid.Row="1"
                FontSize="60"
                Click="FunctionKey_Pressed"
                Style="{StaticResource FunctionButtonStyle}"/>
        <Button x:Name="POW2"
                Content="x²"
                Grid.Column="0"
                Grid.Row="1"
                FontSize="25"
                Click="FunctionKey_Pressed"
                Style="{StaticResource FunctionButtonStyle}"/>
        <Button x:Name="DOT"
                Content="."
                Grid.Column="0"
                Grid.Row="5"
                FontSize="90"
                Click="FunctionKey_Pressed"
                Style="{StaticResource DotStyle}"/>
        <Button x:Name="CLEAR"
                Content="Clear"
                Grid.Column="0"
                Grid.Row="6"
                Grid.ColumnSpan="4"
                FontSize="90"
                Click="FunctionKey_Pressed"
                Style="{StaticResource FunctionButtonStyle}"/>
   
        <Button x:Name="REMOVE"
        Content="⌫"
        Grid.Column="3"
        Grid.Row="1"
        Grid.ColumnSpan="1"
        FontSize="80"
        Click="FunctionKey_Pressed"
        Style="{StaticResource FunctionButtonStyle}"/>
        <!-- End FunctionKeys-->
    </Grid>
</Window>
